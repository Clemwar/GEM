{% extends('base.html.twig') %}

{% block class %}class="full"{% endblock %}

{% block insight %}
    <section id="register_zone" class="h-100 my-4">
        <div id="register_form" class="container p-2">
            <h1>Nouvelle inscription</h1>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col">
                    {{ form_label(form.nom) }}
                    <div class="error">{{ form_errors(form.nom) }}</div>
                    {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group col">
                    {{ form_label(form.prenom) }}
                    <div class="error">{{ form_errors(form.prenom) }}</div>
                    {{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    {{ form_label(form.email) }}
                    <div class="error"> {{ form_errors(form.email) }}</div>
                    {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group col">
                    {{ form_label(form.telephone) }}
                    <div class="error">{{ form_errors(form.telephone) }}</div>
                    {{ form_widget(form.telephone, {'attr':{'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    {{ form_label(form.password.first) }}
                    <div class="error">{{ form_errors(form.password.first) }}</div>
                    {{ form_widget(form.password.first, {'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group col">
                    {{ form_label(form.password.second) }}
                    {{ form_widget(form.password.second, {'attr':{'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <button class="bouton btn btn-block" type="submit">Continuer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
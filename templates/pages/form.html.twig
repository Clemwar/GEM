{% extends('base.html.twig') %}

{% block class %}class="full"{% endblock %}

{% block insight %}
    <section id="register_zone" class="container h-100 my-4">
        <h1 class="mt-3">Modifier son compte</h1>
        {{ form_start(form)}}
        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.nom) }}
                <div class="error">{{ form_errors(form.nom) }}</div>
                {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group col">
                {{ form_label(form.prenom) }}
                <div class="error">{{ form_errors(form.prenom) }}</div>
                {{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.email) }}
                <div class="error"> {{ form_errors(form.email) }}</div>
                {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group col">
                {{ form_label(form.telephone) }}
                <div class="error">{{ form_errors(form.telephone) }}</div>
                {{ form_widget(form.telephone, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.password.first) }}
                <div class="error">{{ form_errors(form.password.first) }}</div>
                {{ form_widget(form.password.first, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group col">
                {{ form_label(form.password.second) }}
                {{ form_widget(form.password.second, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.adresse) }}
            <div class="error"> {{ form_errors(form.adresse) }}</div>
            {{ form_widget(form.adresse, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.complement) }}
            <div class="error">{{ form_errors(form.complement) }}</div>
            {{ form_widget(form.complement, {'attr':{'class':'form-control'}}) }}
        </div>


        <div class="form-row">
            <div class="form-group col">
                {{ form_label(form.codepostal) }}
                <div class="error">{{ form_errors(form.codepostal) }}</div>
                {{ form_widget(form.codepostal, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group col">
                {{ form_label(form.ville) }}
                {{ form_widget(form.ville, {'attr':{'class':'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.photo) }}
        </div>

        <div class="form-group">
            <button class="bouton btn btn-block" type="submit">Continuer</button>
        </div>
        {{ form_end(form) }}
    </section>>
{% endblock %}